---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import PhaseFlow from '~/components/widgets/PhaseFlow.astro';
import Deliverables from '~/components/widgets/Deliverables.astro';
import ReadinessScore from '~/components/widgets/ReadinessScore.astro';
import VideoWidget from '~/components/widgets/VideoWidget.astro';
import DeepDive from '~/components/widgets/DeepDive.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'DatabricksIQ - Intelligent Data Governance',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="DatabricksIQ Readiness"
    title="Intelligent Data Governance & AI Readiness"
    subtitle="Unlock the power of your data with our comprehensive governance, cost optimization, and AI readiness framework."
    actions={[{ variant: 'primary', text: 'Get Started', href: '#video', target: '_self' }]}
  />

  <!-- Video Widget ******************* -->
  <div id="video">
    <VideoWidget />
  </div>

  <!-- Phase Flow Widget ******************* -->
  <PhaseFlow />

  <!-- Deliverables Widget ************** -->
  <Deliverables />

  <!-- Deep Dive Widget ******************* -->
  <DeepDive />

  <!-- Readiness Score Widget ******************* -->
  <ReadinessScore />

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="You’ve got questions, we’ve got answers"
    subtitle="Common questions about the DatabricksIQ Governance Program."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Who is this program for?',
        description:
          "It's designed for data leaders (CDOs, VP of Data) and their teams who need to move fast but don't want to break things. If you have a Databricks environment and want to get more out of it, this is for you.",
      },
      {
        title: 'How long does it take?',
        description:
          'The assessment and roadmap are typically delivered in 2-4 weeks, depending on the complexity of your environment and availability of your team.',
      },
      {
        title: 'What do I get at the end?',
        description:
          "You get a concrete, prioritized roadmap, a capability map of your team, and a clear 'Readiness Score' that you can track over time. Plus, you'll have a set of immediate 'quick wins' to execute.",
      },
      {
        title: 'Do you fix the issues for us?',
        description:
          "We can! The primary engagement is to assess and plan, but we offer follow-on implementation services to help you execute the roadmap if you need extra hands.",
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Me',
        href: 'mailto:ethiraj.k@dataadvisors.ai',
      },
    ]}
    title="Ready to know your score?"
    subtitle="Contact us today to schedule your Governed AI Readiness Assessment."
  />
</Layout>
